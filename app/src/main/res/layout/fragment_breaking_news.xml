<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_gray">

    <!-- No Internet Image -->
    <ImageView
        android:id="@+id/noWifi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nowifi"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp" />

    <!-- No Internet Text -->
    <TextView
        android:id="@+id/noWifiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO INTERNET"
        android:gravity="center"
        android:textColor="@color/primary_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_below="@id/noWifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Horizontal Scroll of Images -->
    <LinearLayout
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/noWifiText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <!-- Breaking News Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/breakingImage"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:src="@drawable/breaking"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_blue"
                android:elevation="4dp"
                android:shadowColor="@color/primary_blue" />

            <!-- Breaking News Text -->
            <TextView
                android:id="@+id/breakingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breaking"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <!-- Business News Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/businessImage"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:src="@drawable/busness"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_blue"
                android:elevation="4dp"
                android:shadowColor="@color/primary_blue" />

            <!-- Business News Text -->
            <TextView
                android:id="@+id/businessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <!-- Sports News Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sportsImage"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:src="@drawable/sports"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_blue"
                android:elevation="4dp"
                android:shadowColor="@color/primary_blue" />

            <!-- Sports News Text -->
            <TextView
                android:id="@+id/sportsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp">

            <!-- Technology News Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/techImage"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:src="@drawable/tec"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary_blue"
                android:elevation="4dp"
                android:shadowColor="@color/primary_blue" />

            <!-- Technology News Text -->
            <TextView
                android:id="@+id/techText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:gravity="center"
                android:textColor="@color/light_blue"
                android:textSize="14dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->

    <!-- Loading Indicator -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/hsv"
        android:layout_marginVertical="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/primary_blue" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/paginationProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <!-- News RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBreakingNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:layout_marginTop="0dp"
        android:elevation="2dp" />

</RelativeLayout>
